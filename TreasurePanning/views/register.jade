extends layout

block content
  .container
      h1 Online Auction
      p.lead User Signup
      br
      form(role='form', action="/register",method="post", style='max-width: 300px;')
        .form-group
            input.form-control(type='text', name="username", placeholder='Username')
        .form-group
          input.form-control(type='password', name="password", placeholder='Password')
        .form-group
          input.form-control(type='text', name="firstname", placeholder='First Name')
        .form-group
          input.form-control(type='text', name="lastname", placeholder='Last Name')
        .form-group
          input.form-control(type='number', name="phone", placeholder='Phone Number')
        .form-group
          input.form-control(type='text', name="address", placeholder='Address')
        .form-group
          input.form-control(type='email', name="emailaddress", placeholder='Email Address')
        button.btn.btn-default(type='submit') Submit
        &nbsp;
        a(href='/')
          button.btn.btn-primary(type="button") Cancel
